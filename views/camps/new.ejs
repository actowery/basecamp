<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 class="d-flex justify-content-center">Create a New Camp</h1>
        <div class="mx-auto" style="width: 30%; margin: 25px auto">
            <form action="/camps" method="POST">
                <div class="form-group">
                    <input class="form-control" placeholder="Name" type="text" name="name" required />
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Price" type="number" name="price" min="0.01" step="0.01" required />
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Image URL" type="text" name="image" required />
                </div>
                 <div class="form-group">
                    <input class="form-control" placeholder="Description" type="text" name="desc" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
             </form>
         <a href="/camps">Go Back</a>
         </div>
    </div>
</div>

<% include ../partials/footer %>

