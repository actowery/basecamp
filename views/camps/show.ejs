<% include ../partials/header %>


<h1><%= camp.name %></h1>
<img src="<%= camp.image %>">
<p>
   <%=camp.desc%>
</p>
<p><a class="btn btn-success" href ="/camps/<%= camp._id %>/comments/new">Add New Comment</a></p>
<% camp.comments.forEach(function(comment){%>
    <p><strong><%= comment.author %></strong> - <%= comment.text %></p>
<% })%>

