<h1>edit form</h1>
<% include ../partials/header %>

<div class="container">
    <h1 class="d-flex justify-content-center">Edit <%= camp.name %></h1>
        <div class="mx-auto" style="width: 30%;">
            <form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" value="<%= camp.name %>" type="text" name="camp[name]" required />
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" value="<%= camp.price %>" type="number" name="camp[price]" min="0.01" step="0.01" required />
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= camp.location %>">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" value="<%= camp.image %>" type="text" name="camp[image]" required />
                </div>
                 <div class="form-group">
                     <label for="desc">Description</label>
                    <input class="form-control" value="<%= camp.desc %>" type="text" name="camp[desc]" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
             </form>
         <a href="/camps">Go Back</a>
      </div>

   </div>

<% include ../partials/footer %>