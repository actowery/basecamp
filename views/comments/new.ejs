<div class="container">
    <h1 class="d-flex justify-content-center">Add New Comment to <%=camp.name%></h1>
        <div class="mx-auto" style="width: 30%;">
            <form action="/camps/<%=camp._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" placeholder="text" type="text" name="comment[text]" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
             </form>
         <a href="/camps">Go Back</a>
      </div>

   </div>

